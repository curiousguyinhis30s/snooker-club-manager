{
  "name": "snooker-club-manager",
  "private": true,
  "version": "2.2.0",
  "type": "module",
  "description": "Professional Snooker Club Management System - Complete Business Solution",
  "author": "Snooker Club Manager",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:check": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "cross-env NODE_ENV=development DEV_SERVER_PORT=5173 concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win --x64",
    "electron:build:portable": "npm run build && electron-builder --win portable --x64",
    "package": "npm run build && electron-builder --win --x64"
  },
  "dependencies": {
    "@tailwindcss/postcss": "4.1.14",
    "@types/bcryptjs": "2.4.6",
    "@types/dompurify": "3.0.5",
    "bcryptjs": "3.0.3",
    "dompurify": "3.3.0",
    "lucide-react": "0.544.0",
    "playwright": "1.57.0",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "recharts": "3.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.2.2",
    "electron-builder": "^26.0.12",
    "electron-icon-builder": "^2.0.1",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7",
    "wait-on": "^9.0.1"
  }
}
